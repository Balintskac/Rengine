{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },

  "configurePresets": [
    {
      "name": "msvc-debug",
      "displayName": "MSVC 2022 Debug",
      "generator": "Ninja",
      "description": "Build with MSVC 2022 compiler and vcpkg toolchain (Debug)",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/Vendor/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "environment": {
        "VSCMD_ARG_TGT_ARCH": "x64"
      },
      "toolset": {
        "value": "host=x64"
      },
      "architecture": {
        "value": "x64"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC 2022 Release",
      "generator": "Ninja",
      "description": "Optimized release build with MSVC 2022 and vcpkg toolchain",
      "inherits": "msvc-debug",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "msvc-debug"
    },
    {
      "name": "release",
      "configurePreset": "msvc-release"
    }
  ]
}
